<div class="image-with-heading">
  <img
    src="{{ section.settings.image | img_url: '1440x' }}"
    alt=""
    srcset="">
  <div>
    <h1
      data-aos="hero"
      data-aos-anchor="animation_anchor"
      data-aos-order="1">
      {{ section.settings.heading }}
    </h1>
  </div>
</div>

{% schema %}
  {
    "name": "Image & Heading",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "presets": [
      {
        "name": "Image & Heading"
      }
    ]
  }
{% endschema %}